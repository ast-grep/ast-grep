      "properties": {
        "pattern": {
          "description": "A pattern string or a pattern object.",
          "$ref": "#/$defs/PatternStyle"
        },
        "kind": {
          "description": "The kind name of the node to match. You can look up code's kind names in playground.",
          "type": "string",
          "enum": [
            "_expression",
            "additive_expression",
            "array_literal",
